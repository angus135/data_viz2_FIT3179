{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Top 20 Australian Power Stations by Installed Capacity",
    "fontSize": 20,
    "anchor": "middle",
    "font": "Helvetica Neue, Arial"
  },
  "width": 300,
  "height": 250,
  "background": "#FFFFFF",
  "data": {
    "url": "https://angus135.github.io/data_viz2_FIT3179/data/top20powerstations.json"
  },
  "transform": [
    {
      "calculate": "datum.State == 'VIC' ? 'Victoria' : datum.State == 'NSW' ? 'New South Wales' : datum.State == 'QLD' ? 'Queensland' : datum.State == 'SA' ? 'South Australia' : datum.State == 'NT' ? 'Northern Territory' : datum.State == 'WA' ? 'Western Australia' : datum.State == 'ACT' ? 'Australian Capital Territory' : datum.State == 'TAS' ? 'Tasmania' : datum.State",
      "as": "State Full Name"
    }
  ],
  "mark": {
    "type": "bar",
    "tooltip": true
  },
  "encoding": {
    "y": {
      "field": "Power station name",
      "type": "nominal",
      "sort": "-x",
      "title": "Power Station Name"
    },
    "x": {
      "field": "Installed capacity",
      "type": "quantitative",
      "title": "Installed Capacity (MW)"
    },
    "color": {
      "field": "Fuel source(s)",
      "type": "nominal",
      "scale": {
        "domain": ["Biomass", "Hydro", "Wind", "Solar"],
        "range": ["#8B4513", "#08306b", "#78909C", "#FFA726"]
      },
      "legend": {"title": "Primary Fuel Source"}
    },
    "tooltip": [
      {"field": "Power station name", "type": "nominal", "title": "Power Station"},
      {"field": "Fuel source(s)", "type": "nominal", "title": "Fuel Source"},
      {
        "field": "Installed capacity",
        "type": "quantitative",
        "format": ".1f",
        "title": "Installed Capacity (MW)"
      },
      {"field": "State Full Name", "type": "nominal", "title": "State"}
    ]
  }
}