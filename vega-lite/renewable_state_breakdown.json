{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Renewable Energy Capacity by Australian State (2023-24)",
    "fontSize": 20,
    "anchor": "middle",
    "font": "Helvetica Neue, Arial"
  },
  "width": 500,
  "height": 400,
  "data": { "url": "https://angus135.github.io/data_viz2_FIT3179/data/renewable_energy_by_state.csv" },
  "transform": [
    {
      "calculate": "datum.state == 'VIC' ? 'Victoria' : datum.state == 'NSW' ? 'New South Wales' : datum.state == 'QLD' ? 'Queensland' : datum.state == 'SA' ? 'South Australia' : datum.state == 'NT' ? 'Northern Territory' : datum.state == 'WA' ? 'Western Australia' : datum.state == 'ACT' ? 'Australian Capital Territory' : datum.state == 'TAS' ? 'Tasmania' : datum.state",
      "as": "State Full Name"
    }
  ],
  "layer": [
    {
      "params": [
        {
          "name": "tech_select",
          "select": { "type": "point", "fields": ["technology"] },
          "bind": "legend"
        }
      ],
      "transform": [
        {
          "filter": { "param": "tech_select" }
        }
      ],
      "mark": "bar",
      "encoding": {
        "x": {
          "field": "State Full Name",
          "type": "nominal",
          "sort": { "field": "value", "order": "descending" },
          "axis": { "title": "State/Territory", "labelAngle": 0, "labelFontSize": 12 }
        },
        "y": {
          "field": "value",
          "type": "quantitative",
          "axis": { "title": "Energy (GWh)", "labelFontSize": 11 }
        },
        "color": {
          "field": "technology",
          "type": "nominal",
          "scale": {
            "domain": ["Biofuels", "Hydro", "Wind", "Solar"],
            "range": ["#8B4513", "#08306b", "#78909C", "#FFA726"]
          },
          "legend": { "title": "Technology", "titleFontSize": 13, "labelFontSize": 11 }
        },
        "tooltip": [
          { "field": "State Full Name", "type": "nominal", "title": "State" },
          { "field": "technology", "type": "nominal", "title": "Technology" },
          { "field": "value", "type": "quantitative", "title": "Energy (GWh)", "format": ",.2f" }
        ]
      }
    },
    {
      "data": { "values": [{}] },
      "mark": {
        "type": "text",
        "align": "center",
        "baseline": "top",
        "fontSize": 11,
        "font": "Lato, sans-serif",
        "dx": -10,
        "dy": 10,
        "lineHeight": 16
      },
      "encoding": {
        "x": { "value": 270 },
        "y": { "value": 50 },
        "text": {
          "condition": {
            "test": "!length(data('tech_select_store'))",
            "value": ["South Australia is one of the largest", "producers of wind power, yet produces", "no hydro power"]
          },
          "value": ""
        },
        "color": { "value": "black" }
      }
    },
    {
      "data": { "values": [{}] },
      "mark": {
        "type": "rule",
        "strokeDash": [4, 2],
        "strokeWidth": 1.5,
        "color": "#333",
        "opacity": 0.5
      },
      "encoding": {
        "x": { "value": 250 },
        "y": { "value": 110 },
        "x2": { "value": 250 },
        "y2": { "value": 240 },
        "opacity": {
          "condition": {
            "test": "!length(data('tech_select_store'))",
            "value": 1
          },
          "value": 0
        }
      }
    },
    {
      "data": { "values": [{}] },
      "mark": {
        "type": "point",
        "shape": "triangle-up",
        "size": 50,
        "angle": 180,
        "filled": true,
        "color": "black"
      },
      "encoding": {
        "x": { "value": 250 },
        "y": { "value": 240 },
        "opacity": {
          "condition": {
            "test": "!length(data('tech_select_store'))",
            "value": 1
          },
          "value": 0
        }
      }
    },
    {
      "data": { "values": [{}] },
      "mark": {
        "type": "text",
        "align": "center",
        "baseline": "top",
        "fontSize": 11,
        "font": "Lato, sans-serif",
        "dx": -10,
        "dy": 10,
        "lineHeight": 16
      },
      "encoding": {
        "x": { "value": 400 },
        "y": { "value": 150 },
        "text": {
          "condition": {
            "test": "!length(data('tech_select_store'))",
            "value": ["Tasmania produces the largest amount", "of renewable electricity per capita"]
          },
          "value": ""
        },
        "color": { "value": "black" }
      }
    },
    {
      "data": { "values": [{}] },
      "mark": {
        "type": "rule",
        "strokeDash": [4, 2],
        "strokeWidth": 1.5,
        "color": "#333",
        "opacity": 0.5
      },
      "encoding": {
        "x": { "value": 375 },
        "y": { "value": 200 },
        "x2": { "value": 330 },
        "y2": { "value": 250 },
        "opacity": {
          "condition": {
            "test": "!length(data('tech_select_store'))",
            "value": 1
          },
          "value": 0
        }
      }
    },
    {
      "data": { "values": [{}] },
      "mark": {
        "type": "point",
        "shape": "triangle-up",
        "size": 50,
        "angle": 220,
        "filled": true,
        "color": "black"
      },
      "encoding": {
        "x": { "value": 330 },
        "y": { "value": 250 },
        "opacity": {
          "condition": {
            "test": "!length(data('tech_select_store'))",
            "value": 1
          },
          "value": 0
        }
      }
    }
  ]
}