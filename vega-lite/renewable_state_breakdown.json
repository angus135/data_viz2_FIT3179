{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Renewable Energy Capacity by Australian State",
    "fontSize": 20,
    "anchor": "middle",
    "font": "Helvetica Neue, Arial",
    "color": "#00382f"
  },
  "background": "#FFFDF7",
  "width": 400,
  "height": 300,
  "data": { "url": "https://angus135.github.io/data_viz2_FIT3179/data/renewable_energy_by_state.csv" },
  "transform": [
    {
      "calculate": "datum.state == 'VIC' ? 'Victoria' : datum.state == 'NSW' ? 'New South Wales' : datum.state == 'QLD' ? 'Queensland' : datum.state == 'SA' ? 'South Australia' : datum.state == 'NT' ? 'Northern Territory' : datum.state == 'WA' ? 'Western Australia' : datum.state == 'ACT' ? 'Australian Capital Territory' : datum.state == 'TAS' ? 'Tasmania' : datum.state",
      "as": "State Full Name"
    }
  ],
  "layer": [
    {
      "params": [
        {
          "name": "tech_select",
          "select": { "type": "point", "fields": ["technology"] },
          "bind": "legend"
        }
      ],
      "transform": [
        {
          "filter": { "param": "tech_select" }
        }
      ],
      "mark": "bar",
      "encoding": {
        "y": {
          "field": "State Full Name",
          "type": "nominal",
          "sort": { "field": "value", "order": "descending" },
          "axis": { 
            "title": "State/Territory", 
            "titleFontSize": 13,
            "labelFontSize": 11,
            "titleFont": "Helvetica Neue, Arial",
            "labelFont": "Lato, sans-serif",
            "titleColor": "#00382f",
            "labelColor": "#00382f"
          }
        },
        "x": {
          "field": "value",
          "type": "quantitative",
          "axis": { 
            "title": "Energy (GWh)", 
            "titleFontSize": 13,
            "labelFontSize": 11,
            "titleFont": "Helvetica Neue, Arial",
            "labelFont": "Lato, sans-serif",
            "grid": true,
            "gridOpacity": 0.5,
            "titleColor": "#00382f",
            "labelColor": "#00382f"
          }
        },
        "color": {
          "field": "technology",
          "type": "nominal",
          "scale": {
            "domain": ["Biofuels", "Hydro", "Wind", "Solar"],
            "range": ["#8B4513", "#08306b", "#78909C", "#FFA726"]
          },
          "legend": { 
            "title": "Technology (click to filter)", 
            "titleFontSize": 13, 
            "labelFontSize": 11,
            "orient": "none",
            "direction": "horizontal",
            "legendX": 155,
            "legendY": 245,
            "fillColor": "#FFFDF7",
            "strokeColor": "gray",
            "padding": 10,
            "cornerRadius": 3,
            "titleFont": "Helvetica Neue, Arial",
            "labelFont": "Lato, sans-serif",
            "titleColor": "#00382f",
            "labelColor": "#00382f"
          }
        },
        "tooltip": [
          { "field": "State Full Name", "type": "nominal", "title": "State" },
          { "field": "technology", "type": "nominal", "title": "Technology" },
          { "field": "value", "type": "quantitative", "title": "Energy (GWh)", "format": ",.2f" }
        ]
      }
    },
    {
      "data": { "values": [{}] },
      "mark": {
        "type": "text",
        "align": "center",
        "baseline": "top",
        "fontSize": 11,
        "font": "Lato, sans-serif",
        "dx": 0,
        "dy": -20,
        "lineHeight": 16
      },
      "encoding": {
        "x": { "value": 310 },
        "y": { "value": 160 },
        "text": {
          "condition": {
            "test": "!length(data('tech_select_store'))",
            "value": ["South Australia is one of the largest", "producers of wind power, yet produces", "no hydro power"]
          },
          "value": ""
        },
        "color": { "value": "#00382f" }
      }
    },
    {
      "data": { "values": [{}] },
      "mark": {
        "type": "rule",
        "strokeDash": [4, 2],
        "strokeWidth": 1.5,
        "color": "#333",
        "opacity": 0.5
      },
      "encoding": {
        "x": { "value": 160 },
        "y": { "value": 150 },
        "x2": { "value": 220 },
        "y2": { "value": 150 },
        "opacity": {
          "condition": {
            "test": "!length(data('tech_select_store'))",
            "value": 1
          },
          "value": 0
        }
      }
    },
    {
      "data": { "values": [{}] },
      "mark": {
        "type": "point",
        "shape": "triangle-up",
        "size": 50,
        "angle": 270,
        "filled": true,
        "color": "black"
      },
      "encoding": {
        "x": { "value": 160 },
        "y": { "value": 150 },
        "opacity": {
          "condition": {
            "test": "!length(data('tech_select_store'))",
            "value": 1
          },
          "value": 0
        }
      }
    },
    {
      "data": { "values": [{}] },
      "mark": {
        "type": "text",
        "align": "center",
        "baseline": "top",
        "fontSize": 11,
        "font": "Lato, sans-serif",
        "dx": -10,
        "dy": 10,
        "lineHeight": 16
      },
      "encoding": {
        "x": { "value": 320 },
        "y": { "value": 195 },
        "text": {
          "condition": {
            "test": "!length(data('tech_select_store'))",
            "value": ["Tasmania produces the largest amount", "of renewable electricity per capita"]
          },
          "value": ""
        },
        "color": { "value": "#00382f" }
      }
    },
    {
      "data": { "values": [{}] },
      "mark": {
        "type": "rule",
        "strokeDash": [4, 2],
        "strokeWidth": 1.5,
        "color": "#333",
        "opacity": 0.5
      },
      "encoding": {
        "x": { "value": 210 },
        "y": { "value": 210 },
        "x2": { "value": 144 },
        "y2": { "value": 200 },
        "opacity": {
          "condition": {
            "test": "!length(data('tech_select_store'))",
            "value": 1
          },
          "value": 0
        }
      }
    },
    {
      "data": { "values": [{}] },
      "mark": {
        "type": "point",
        "shape": "triangle-up",
        "size": 50,
        "angle": 280,
        "filled": true,
        "color": "black"
      },
      "encoding": {
        "x": { "value": 144 },
        "y": { "value": 200 },
        "opacity": {
          "condition": {
            "test": "!length(data('tech_select_store'))",
            "value": 1
          },
          "value": 0
        }
      }
    }
  ]
}