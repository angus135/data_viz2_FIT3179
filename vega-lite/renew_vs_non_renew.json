{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Renewable vs Non-Renewable Energy Generation by State",
  "data": {
    "url": "https://angus135.github.io/data_viz2_FIT3179/data/state_renewable_vs_non_renewable.json"
  },
  "params": [
    {
      "name": "metric_selection",
      "value": "Raw",
      "bind": {
        "input": "select",
        "options": ["Raw", "Per Capita", "Per GDP"],
        "labels": ["Raw Energy (GWh)", "Energy Per Capita (Wh/person)", "Energy Per GDP (Wh/$)"],
        "name": "Metric: "
      }
    }
  ],
  "transform": [
    {
      "fold": ["Renewable", "Non-Renewable", "Renewable per capita", "Non-Renewable per capita", "Renewable per GDP", "Non-Renewable per GDP"],
      "as": ["Type_Full", "Value"]
    },
    {
      "calculate": "split(datum.Type_Full, ' ')[0]",
      "as": "Energy_Type"
    },
    {
      "calculate": "indexof(datum.Type_Full, 'per capita') > 0 ? 'Per Capita' : indexof(datum.Type_Full, 'per GDP') > 0 ? 'Per GDP' : 'Raw'",
      "as": "Metric"
    },
    {
      "filter": "datum.Metric == metric_selection"
    },
    {
      "calculate": "metric_selection == 'Raw' ? 'Energy Generation (GWh)' : metric_selection == 'Per Capita' ? 'Energy Generation (Wh/person)' : 'Energy Generation (Wh/$)'",
      "as": "Y_Axis_Title"
    },
    {
      "joinaggregate": [
        {
          "op": "sum",
          "field": "Value",
          "as": "Total_Energy"
        }
      ],
      "groupby": ["State"]
    }
  ],
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "State",
      "type": "nominal",
      "axis": {"title": "State", "labelAngle": 0},
      "sort": {
        "field": "Total_Energy",
        "op": "max",
        "order": "descending"
      }
    },
    "y": {
      "field": "Value",
      "type": "quantitative",
      "axis": {
        "title": "Energy Generation"
      }
    },
    "color": {
      "field": "Energy_Type",
      "type": "nominal",
      "scale": {
        "domain": ["Renewable", "Non-Renewable"],
        "range": ["#2ca02c", "#d62728"]
      },
      "legend": {"title": "Energy Type"}
    },
    "xOffset": {
      "field": "Energy_Type"
    },
    "tooltip": [
      {"field": "State", "type": "nominal", "title": "State"},
      {"field": "Energy_Type", "type": "nominal", "title": "Type"},
      {"field": "Value", "type": "quantitative", "title": "Value", "format": ",.2f"}
    ]
  },
  "width": 600,
  "height": 400
}